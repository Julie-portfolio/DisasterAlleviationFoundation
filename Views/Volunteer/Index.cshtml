@model IEnumerable<DisasterAlleviationApp.Models.Volunteer>
@{
    ViewData["Title"] = "Volunteers";
}
<h2>Volunteers</h2>
<a asp-action="Register" class="btn btn-success mb-3">Register as Volunteer</a>

<table class="table table-striped">
    <thead><tr><th>Name</th><th>Skills</th><th>Availability</th><th>Actions</th></tr></thead>
    <tbody>
        @foreach (var v in Model)
        {
            <tr>
                <td>@v.Name</td>
                <td>@v.Skills</td>
                <td>@v.Availability</td>
                <td><a asp-action="AssignTask" asp-route-id="@v.Id" class="btn btn-sm btn-primary">Assign Task</a></td>
            </tr>
        }
    </tbody>
</table>
